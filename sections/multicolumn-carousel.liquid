<style>
  /* Mobile Carousel CSS Only */
  @media (max-width: 768px) {
    [data-section-id="{{ section.id }}"] .section-content-wrapper {
      display: flex;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      gap: 0;
    }

    [data-section-id="{{ section.id }}"] .section-content-wrapper > * {
      flex: 0 0 100%;
      min-width: 100%;
      scroll-snap-align: start;
      scroll-snap-stop: always;
    }

    /* Hide scrollbar */
    [data-section-id="{{ section.id }}"] .section-content-wrapper {
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    [data-section-id="{{ section.id }}"] .section-content-wrapper::-webkit-scrollbar {
      display: none;
    }
  }

  /* Desktop - Keep normal grid layout */
  @media (min-width: 769px) {
    [data-section-id="{{ section.id }}"] .section-content-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: var(--gap, 16px);
    }

    [data-section-id="{{ section.id }}"] .section-content-wrapper > * {
      flex: 1 1 auto;
      min-width: 0;
    }
  }
</style>

